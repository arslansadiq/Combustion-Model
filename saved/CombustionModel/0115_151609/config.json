{
    "name": "CombustionModel",
    "n_gpu": 1,
    "arch": {
        "type": "CombustionModel",
        "bottleneck_size": 500,
        "args": {}
    },
    "data_loader": {
        "type": "CombustiontDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mean_squared_error",
    "metrics": [
        "my_metric"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization": {
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}